<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Login form</title>
</head>

<body>
    <div class="outer ">
        <div class="container ">
            <h1>login form</h1>
            <div class="list">
                <ul>
                    <li class="index">
                        <a href="index">Login</a>
                    </li>
                    <li class="register">
                        <a href="register">Register</a>
                    </li>
                </ul>
            </div>
            {{#if serverSuccess}}
            <div class="success">{{serverSucsess}}</div>
            {{/if}}
            {{#if serverError}}
            <div class="error">{{serverError}}</div>
            {{/if}}
            <form action="log" method="POST" class="login">
                <div class="sub">
                    <input type="text" placeholder="username" name="username" required id="user" /></br>
                    <input type="password" placeholder="password" name="password" required id="pass" /></br>
                    <a href="#" id="l">forgot password</a></br>
                    <input type="submit" value="Login" id="submit" /></br>
                    <p>Not a member?<a href="register">Signup</a></br>
                    </P>
                </div>
            </form>
        </div>
    </div>

</body>

</html>